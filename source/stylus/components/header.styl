.header
  &__inner
    background-color: $color-white
    border-radius: 0 0 12px 12px
    padding: 12px 0
    +above($breakpoints.sm)
      padding: 14px 0
      justify-content: flex-start
    +above($breakpoints.xxl)
      padding: 20px 0

  &__container
    display: flex
    align-items: center
    gap: 14px
    +above($breakpoints.sm)
      gap: 20px
    +above($breakpoints.md)
      gap: 30px
    +above($breakpoints.xxl)
      gap: 54px

  &__description
    line-height: 130%
    display: block
    font-size: 12px
    letter-spacing: -0.04em;
    margin: 0 0 4px 0
    color: #1a3606;
    +above($breakpoints.sm)
      margin: 0 0 8px 0
      font-size: 14px
    +above($breakpoints.md)
      font-size: 15px
    +above($breakpoints.xxl)
      margin: 0 0 12px 0
      font-size: 16px
    br
      display: inline-block

  &__logo
    img
      height: auto
      width 96px
      margin: auto
      +above($breakpoints.sm)
        width 110px
      +above($breakpoints.md)
        width 130px
      +above($breakpoints.xxl)
        width 196px
