.swiper-bullets
  position relative !important
  width 100% !important
  display: flex
  justify-content: center
  bottom: 0 !important
  margin: 20px 0 0 0
  +above($breakpoints.sm)
    display: none
  .swiper-pagination-bullet
    width 6px
    height: 6px
    padding: 4px
    transition: 0.3s
    background: rgb(0, 0, 0)
  .swiper-pagination-bullet-active
    padding: 4px 12px
    border-radius: 100px
